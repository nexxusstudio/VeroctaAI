{
  "version": 2,
  "name": "verocta-ai",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://verocta-ai-fullstack.onrender.com/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_VERSION": "20"
  },
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "VITE_API_URL": "/api"
    }
  }
}
